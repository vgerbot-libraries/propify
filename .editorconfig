root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.java]
indent_size = 4
max_line_length = 120

[*.{xml,xsd,xsl}]
indent_size = 4

[*.{yml,yaml}]
indent_size = 2

[*.json]
indent_size = 2

[*.md]
trim_trailing_whitespace = false
max_line_length = off

[*.properties]
charset = utf-8
insert_final_newline = true

[*.sh]
end_of_line = lf
indent_size = 2

[{.github/**/*.yml,.github/**/*.yaml}]
indent_size = 2

[{Makefile,makefile,GNUmakefile}]
indent_style = tab

[*.{bat,cmd}]
end_of_line = crlf
